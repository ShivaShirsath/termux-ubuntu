#!/bin/bash

Z="$(printf '\033[0m\n')"
b="$(printf '\033[1;30m')"
R="$(printf '\033[1;31m')"
G="$(printf '\033[1;32m')"
Y="$(printf '\033[1;33m')"
B="$(printf '\033[1;34m')"
P="$(printf '\033[1;35m')"
C="$(printf '\033[1;36m')"
W="$(printf '\033[1;37m')" 

banner() {
	clear
echo -e "
┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓${Z}
┃${R}ooooo     ooo${Y}oooooooooo. ${G}ooooo     ooo${B}ooooo      ooo${C}ooooooooooooo${P}ooooo     ooo${Z}┃
┃${R}°888°     °8°${Y}°888°   °Y8b${G}°888°     °8°${B}°888b.     °8°${C}8°   888   °8${P}°888°     °8°${Z}┃
┃${R} 888       8 ${Y} 888     888${G} 888       8 ${B} 8 °88b.    8 ${C}     888     ${P} 888       8 ${Z}┃
┃${R} 888       8 ${Y} 888oooo888°${G} 888       8 ${B} 8   °88b.  8 ${C}     888     ${P} 888       8 ${Z}┃
┃${R} 888       8 ${Y} 888    °88b${G} 888       8 ${B} 8     °88b.8 ${C}     888     ${P} 888       8 ${Z}┃
┃${R} °88.    .8° ${Y} 888    .88P${G} °88.    .8° ${B} 8       °888 ${C}     888     ${P} °88.    .8° ${Z}┃
┃${R}   °YbodP°   ${Y}o888bood8P° ${G}   °YbodP°   ${B}o8o        °8 ${C}    o888o    ${P}   °YbodP°   ${Z}┃
┡━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┩${Z}
│${R}     GUI     ${Y}  version   ${G}      of     ${B}    ubuntu    ${C}     for     ${P}    TermUX ${Z}  │
╰──────────────────────────────────────────────────────────────────────────────╯
"
}

banner

